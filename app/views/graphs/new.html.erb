<div class="graph-new">
  <div class="container d-flex flex-column align-items-center">
  <% if @graph.errors.any? %>
  <div class="card text-center text-white bg-danger mt-3">
    <%= @graph.errors.count %>件のエラーが発生しました
    <% @graph.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
    </div>
  <% end %>
    <div class="row mt-5">
      <%= form_with model: @graph, local:true do |f| %>
        <div class="form-group" mb-3>
          <label class="form-label">年齢</label>
            <%= f.text_field :age, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">数値</label>
            <%= f.text_field :value, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">コメント</label>
            <%= f.text_area :comment, rows:10, class:"form-control" %>
        </div>
        <%= f.submit '追加する', class: "btn btn-primary" %><br>
        <%= link_to '戻る', graphs_path, class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
