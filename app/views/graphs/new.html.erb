<div class="graph-new">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <%= form_with model: @graph, local:true do |f| %>
        <div class="form-group" mb-3>
          <label class="form-label">学年or年齢</label>
            <%= f.text_field :age, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">数値</label>
            <%= f.text_field :value, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">コメント</label>
            <%= f.text_area :comment, rows:10, class:"form-control" %>
        </div>
        <%= f.submit '追加する', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
