<div class="cover-user-show">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <% if user_signed_in? && @user == current_user %>
      <h1 class="font-weight-normal">マイページ</h>
      <% else %>
      <h1 class="font-weight-normal"><%= @user.name %>さんのページ</h1>
      <% end %>
    </div>
    <div class="row mt-5 index-left w-100">
      <% @graphs.each do |graph| %>
      <div class="one-post col-sm-3 mb-3">
        <%= link_to graph_path(graph) do %>
        <%= attachment_image_tag graph, :image, format: 'jpeg', size: '200x133' %>
        <p class="caption mb-0"><%= graphs.age %></p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
