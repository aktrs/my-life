<div class="cover-user-index">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weight-normal">ユーザ一覧</h1>
    </div>
    <div class="col-12 col-md-4 mb-3">
      <%= @users.each do |user| %>
      <div class="one-post card mt-3">
        <%= link_to user_path(user) do %>
          <p class="caption h4"><%= user.name %></p>
        <% end %>
        <% if user.graphs.any? %>
          <div class="user-graphs">
            <% user.graphs.each do |graph| %>
                <div class="graph-item">
                  <% if graph.image.attached? %>
                  <% image_tag graph.image.variant(resize: "100x100").processed, size:"100x100", alt:"Graph Image" %>
                  <% else %>
                    <p>No graph image available</p>
                  <% end %>
                    <p><%= graph.age %>years old</p>
                    <p><%= graph.comment %></p>
                </div>
            <% end %>
          </div>
        <% else %>
          <p class="no-graphs">グラフがありません</p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
