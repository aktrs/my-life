<div class="cover-user-index">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weight-normal text-center">ユーザ一覧</h1>
    </div>
    <div class="row mt-5 w-50">
      <% @users.each do |user| %>
      <div class="one-post card mt-3">
        <%= link_to user_path(user) do %>
        <div class="d-flex">
          <%= attachment_image_tag user, :profile_image, size: '70x70', fallback: "no_image.svg", class: "mt-3 mb-3 profile-img" %>
          <p class="caption h4 mt-4"><%= user.name %></p>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @users %>
  </div>
</div>