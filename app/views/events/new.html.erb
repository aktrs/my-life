<div class="cover-new">
  <div class="container d-flex flex-column align-items-center">
    <% if @event.errors.any? %>
      <div class="card text-center text-white bg-danger mt-3">
        <%= @event.errors.count %>件のエラーが発生しました
        <%= safe_join(@event.errors.full_messages.map { |message| content_tag(:p, message) }) %>
      </div>
    <% end %>
    <div class="row mt-5">
      <%= form_with model: @event, local:true do |f| %>
        <div class="form-group mb-3">
          <label class="form-label">年齢</label>
            <%= f.text_field :age, class:"form-control", id:"age_field" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">月</label>
            <%= f.text_field :month, class:"form-control", id:"month_field" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">出来事</label>
            <%= f.text_area :event, class:"form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">出来事詳細</label>
            <%= f.text_area :event_detail, rows:10, class:"form-control", id:"event_detail" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">画像</label><br>
            <%= f.file_field :image%>
        </div>
        <%= f.submit '追加する', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>